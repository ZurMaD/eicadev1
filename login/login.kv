#:kivy 1.11.1

<FlatButton@ButtonBehavior+Label>:
    font_size:16


<Ventana_login>:
    id:ventana_login
    orientation: "vertical"
    spacing: 10
    spacex:self.size[0]/3
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        center:root.center
        pos_hint: {'top': 0}
        size_hint_y: None
        heigh: 50
        canvas.before:
            Color:
                rgba:(0.06,0.45,0.45,1)
            Rectangle:
                size: self.size
                pos:self.pos
        Label:
            text:"Control de acceso"
            bold: True
            size_hint_x: 0.9

        FlatButton:
            text: "X"
            size_hint_x:0.1

    BoxLayout:

        orientation:"vertical"
        padding:ventana_login.spacex,10
        #spacing:20
        BoxLayout:
            orientation: "vertical"
            spacing:10
            size_hint_y:None
            height:100

            Label:

                id: mensaje
                text:'---------'
                markup:True
                #size_hint_y:None
                heigh:20

            TextInput:
                id:usuario
                hint_text: "Usuario"
                multiline: False
                focus: True # Para pasar con enter al siguiente
                on_text_validate:contrasenha.focus=True
            TextInput:
                id:contrasenha
                hint_text:"Contrase\u00F1a".encode('utf8')
                multiline: False
                password:True
                on_text_validate:root.iniciar_sesion()

        Label:
            id:sp
            size_hint_y:None
            heigh:20

        Button:
            text: "Iniciar sesion"
            size_hint_y:None
            heigh:20
            background_color: (0.06,0.45,0.45,1)
            background_normal: ''
            on_release:root.iniciar_sesion()
        Label:
            id:sp2
            size_hint_y:None
            heigh:20
