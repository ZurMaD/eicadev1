#:kivy 1.11.1

<FlatButton@ButtonBehavior+Label>:
    font_size:14

<Ventana_ventas>:
    id: ventana_inicio
    orientation:'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    NavigationLayout:
        MDNavigationDrawer:
            #http://bit.ly/2PzQAga
            #logos http://bit.ly/36sSPaT
            id: navegador
            side_panel_width:0.2*self.width # side available
            drawer_logo: "assets/img/controlador/user.jpg"
            NavigationDrawerSubheader:
                id:info_usuario
                text: "Administrador 1    01/11/19"
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Ingresar ventas"
                on_release:screen_manager.current='screen1'
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Ingresar compras"
                on_release:screen_manager.current='screen2'
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Reportes"
                on_release:screen_manager.current='screen3'
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Ingresar compras"
                on_release:print("4")                                
            NavigationDrawerIconButton:
                icon: 'logout-variant'
                text: 'Cerrar sesión'
                on_release:root.cerrar_sesion()
 
        BoxLayout:
            id:cuerpo
            orientation:'vertical'

            ScreenManager:
                id:screen_manager
                Screen:
                    name:'screen1'
                    BoxLayout:
                        orientation:'vertical'
                        canvas.before:
                            Color:
                                rgba: (1,1,1,1)
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        BoxLayout:
                            id:header
                            size_hint_y:None
                            height:40
                            canvas.before:
                                Color:
                                    rgba: (0.06,0.45,0.45,1)
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                            Label:
                                id: titulo_ventana
                                text:'CONTROLADOR - VENTAS'
                                size_hint_x:0.9
                                bold:True
                                color:(1,1,1,1)
                            # Button:
                            #     id:boton_loggedin
                            #     text:'jdoe'
                            #     color:(1,1,1,1)
                        BoxLayout:
                            id: current
                            size_hint_y:None
                            heigh:50
                            canvas.before:
                                Color:
                                    rgba: (1,1,1,1)
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                            Button:
                                text:'Producto actual'
                                background_normal:''
                                background_color:(0.06,0.32,0.32,1)
                                size_hint_x:0.4
                            Button:
                                id:ultimo_producto_nombre
                                text:'Producto predeterminado'          
                                background_normal:''
                                background_color:(0.06,0.4,0.4,1)    
                            Button:
                                id:ultimo_producto_precio
                                text:'00.00'
                                background_normal:''
                                background_color:(0.06,0.65,0.65,1)
                                size_hint_x:0.2

                        BoxLayout:
                            padding:5
                            BoxLayout:
                                id: product_details
                                orientation:'vertical'
                                size_hint_x:0.8
                                spacing:5
                                BoxLayout:
                                    id: product_labels
                                    size_hint_y:None
                                    height:20
                                    canvas.before:
                                        Color:
                                            rgba: (0.06,0.45,0.45,1)
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos

                                    FlatButton:
                                        text:'Cant.'
                                        size_hint_x:0.1
                                    FlatButton:
                                        text:"Código de producto"
                                        size_hint_x:0.3
                                    FlatButton:
                                        text:'Desc.'
                                        size_hint_x:0.1
                                    FlatButton:
                                        text:'Desc. %'
                                        size_hint_x:0.1
                                    FlatButton:
                                        text:'IVA'
                                        size_hint_x:0.1
                                    FlatButton:
                                        text:'Precio'
                                        size_hint_x:0.1
                                    FlatButton:
                                        text:'Precio total'
                                        size_hint_x:0.2
                                BoxLayout:
                                    id: producto_entradas
                                    size_hint_y: None
                                    height:30
                                    
                                    TextInput:
                                        id: cantidad_producto
                                        size_hint_x: 0.1
                                        multiline: False
                                    TextInput:
                                        id: codigo_producto
                                        size_hint_x: 0.3
                                        multiline: False
                                        on_text_validate: root.actualizar_compras() #agregar ventas
                                    TextInput:
                                        id: descuento_producto
                                        size_hint_x: 0.1
                                        multiline: False
                                    TextInput:
                                        id: descuento_porcentaje_producto
                                        size_hint_x: 0.1
                                        multiline: False
                                    TextInput:
                                        id: iva_producto
                                        size_hint_x: 0.1
                                        multiline: False
                                    TextInput:
                                        id: precio_producto
                                        size_hint_x: 0.1
                                        multiline: False
                                    TextInput:
                                        id:precio_total_producto
                                        size_hint_x: 0.2
                                        multiline: False
                                BoxLayout:
                                    id: agregar_carro
                                    orientation:'vertical'

                                    BoxLayout:
                                        size_hint_y:None
                                        height:20
                                        spacing:5

                                        canvas.before:
                                            Color:
                                                rgba: (0.06,0.45,0.45,1)
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                        Label:
                                            text: 'Cod.'
                                            size_hint_x:0.2
                                        Label:
                                            text:'Producto'
                                            size_hint_x:0.3
                                        Label:
                                            text:'Cant.'
                                            size_hint_x:0.1
                                        Label:
                                            text:'Desc.'
                                            size_hint_x:0.1
                                        Label:
                                            text:'Precio'
                                            size_hint_x:0.1
                                        Label:
                                            text:'Precio total'
                                            size_hint_x:0.2
                                    GridLayout:
                                        id:productos
                                        cols:1
                            BoxLayout:
                                id: preview
                                orientation:'vertical'
                                size_hint_x:0.2

                                TextInput:
                                    font_size:12
                                    id: resumen
                                    readonly: True
                                    text: 'Restaurante Isla de Canrash\n123 Canrash, Huari, Ancash\n\nCel.: 943-847-528\nBoleta Nro: \Día: \n\n'
                        BoxLayout:
                            id:footer
                            size_hint_y:None
                            height:30
                            canvas.before:
                                Color:
                                    rgba: (0.06,0.47,0.47,1)
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                            Button:
                                background_normal:''
                                background_color:(0.06,0.47,0.47,1)
                                on_release: self.background_color = (0.06,0.32,0.32,1)
                                text:'Celular de ayuda: 938-438-089 | Click aquí para enviar whatsapp'
                                on_press:root.ayuda()
                
