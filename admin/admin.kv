#:kivy 1.11.1
<FlatButton@ButtonBehavior+Label>:
    font_size:14

<Ventana_admin>:
    id:ventana_main
    orientation:'vertical'
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos
    NavigationLayout:

        MDNavigationDrawer:
            #http://bit.ly/2PzQAga
            #logos http://bit.ly/36sSPaT
            id: navegador
            side_panel_width:0.2*self.width # side available
            drawer_logo: "user.jpg"
            NavigationDrawerSubheader:
                id:info_usuario
                text: "Administrador 1    01/11/19"
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Ventana 1"
                on_release:print("1")
            NavigationDrawerIconButton:
                icon: 'lock'
                text:"Ventana 2"
                on_release:print("2")
            NavigationDrawerIconButton:
                icon: 'logout-variant'
                text: 'Cerrar sesión'
                on_release:print("3")
    

        BoxLayout:
            id:cuerpo
            orientation:'vertical'
            BoxLayout:
                id: top_bar 
                size_hint_y:None
                height:40
                canvas.before:
                    Color:
                        rgba:(0.06,0.45,0.45,1)
                    Rectangle:
                        size:self.size
                        pos:self.pos
                Label:
                    text:'ADMINISTRADOR'
                    size_hint_x:0.9
                    bold:True
                    color:(1,1,1,1)

            BoxLayout:
                id: contenido 
                padding:5   

                BoxLayout:
                    id: contenido_ventana
                    orientation:'vertical'
                    size_hint_x:0.8
                    spacing:5
                    canvas.before:
                        Color:
                            rgba:(1,1,1,1)
                        Rectangle:
                            size:self.size
                            pos:self.pos
                    
                
            BoxLayout:
                id: footer
                size_hint_y:None
                height:30
                canvas.before:
                    Color:
                        rgba: (0.06,0.47,0.47,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                Button:
                    background_normal:''
                    background_color:(0.06,0.47,0.47,1)
                    on_release: self.background_color = (0.06,0.32,0.32,1)
                    text:'Celular de ayuda: 938-438-089 | Click aquí para enviar whatsapp'
                    on_press:root.ayuda()
        